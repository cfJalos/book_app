<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Book Collection</title>
    <link href="./styles/reset.css" rel="stylesheet"/>
    <link href="./styles/base.css" rel="stylesheet"/>
    <link href="./styles/layout.css" rel="stylesheet"/>
  </head>
  <body>
    <header>
      <h1>The Book App</h1>
      <%- include('layouts/nav.ejs')%>
    </header>
    <main>
      <h4>My Book Collection</h4><p><%=numOfBooks %></p>
      <section id="book-box">
        <% bookList.forEach(book => { %>
          <ul class='books'>
           <img class="coverimg" src="<%= book.image_url %>">
            <li class = "title">Book title: <%= book.title %></li>
            <li class="author">Author: <%= book.author %></li>
            <div>
              <button class="detail_button"><a href="/books/<%= book.id %>">View Details</button>
            </div>
        <% }) %>
        </section>
      
      
    </main>
  </body>
</html>